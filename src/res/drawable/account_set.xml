<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/account_binded"></solid>
            <stroke android:color="#cccccc" android:width="0.8dip"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
         <shape>
            <solid android:color="@color/account_binded"></solid>
            <stroke android:color="#cccccc" android:width="0.8dip"></stroke>
        </shape>
    </item>
    <item android:state_checked="true">
         <shape>
            <solid android:color="@color/account_binded"></solid>
            <stroke android:color="#cccccc" android:width="0.8dip"></stroke>
        </shape>
    </item>
	<item>
	     <shape>
	        <solid android:color="@color/account_unbind"></solid>
            <stroke android:color="#cccccc" android:width="0.8dip"></stroke>
        </shape>
	</item>
</selector>