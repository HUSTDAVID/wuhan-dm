<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/home_load_bg_drawable" >
    
    
    <ProgressBar
        
        android:id="@+id/pro_home" 
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/txt_home"
        android:layout_alignBottom="@+id/txt_home"
        android:layout_marginRight="15dp"
        android:indeterminateDrawable="@drawable/progress_dialog_home"/>
    
    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/pro_home"
        android:singleLine="true"
        android:text="@string/home_load"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="15sp" />
    
    
    <View 
        android:layout_width="1.5dp"
        android:layout_height="fill_parent"
        android:background="#282b28"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_home_load_close"/>
    
    <ImageButton
        android:id="@+id/btn_home_load_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/txt_home"
        android:layout_alignBottom="@+id/txt_home"
        android:layout_alignParentRight="true"
        android:background="@drawable/home_close"/>

</RelativeLayout>