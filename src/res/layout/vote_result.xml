<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"   
    android:orientation="vertical"     >
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/white" >
        
   
       
    <TextView
        android:id="@+id/txt_vote_result"
        style="@style/vote_result_txt"
        android:text="@string/vote_title2" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip" >

        <ProgressBar
            android:id="@+id/pro_vote_result"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dip"
            android:layout_height="20dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:max="100"
            android:progressDrawable="@drawable/vote_pro_green" />

        <TextView
            android:id="@+id/txt_vote_percent"
            style="@style/vote_result_percent"
            android:layout_alignBaseline="@+id/pro_vote_result"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pro_vote_result"
            android:text="15%" />
    </RelativeLayout>

     </LinearLayout>
</LinearLayout>