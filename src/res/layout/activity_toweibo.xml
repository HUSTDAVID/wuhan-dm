<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_bg"
    android:orientation="vertical" >
    
     <include android:id="@+id/weibo_header"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        layout="@layout/header_title2"/>
     
     <RelativeLayout 
         android:id="@+id/weibo_relative1"
         android:layout_width="fill_parent"
         android:layout_height="53.33dip"
         android:background="@color/bg_normal">
        
        <ImageView
            android:id="@+id/weibo_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="9.33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11.33dp"
            android:src="@drawable/site_t_sina" />
        
          <TextView
              android:id="@+id/weibo_text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="20dp"
              android:layout_toRightOf="@id/weibo_imageView1"
              android:text="新浪微博"
              android:textColor="@color/black"
              android:textSize="19sp" >
       </TextView>
            
            <ImageButton
                android:id="@+id/weibo_imagebtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="18.67dp"
                android:layout_marginRight="22.67dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/site_t_add" />
     
     </RelativeLayout>
     
     <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="@drawable/double_line_hor"/>
     
     <RelativeLayout 
         android:id="@+id/weibo_relative2"
         android:layout_width="fill_parent"
         android:layout_height="53.33dip"
         android:background="@color/bg_normal">
        

        <ImageView
            android:id="@+id/weibo_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="9.33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11.33dp"
            android:src="@drawable/site_t_tencent" />
        

          <TextView
              android:id="@+id/weibo_text2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="20dp"
              android:layout_toRightOf="@id/weibo_imageView3"
              android:text="腾讯微博"
              android:textColor="@color/black"
              android:textSize="19sp" >
       </TextView>
            

            <ImageButton
                android:id="@+id/weibo_imagebtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="18.67dp"
                android:layout_marginRight="22.67dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/site_t_add" />
     
     </RelativeLayout>
     

</LinearLayout>