<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weibo_relative2"
    android:layout_width="fill_parent"
    android:layout_height="53.33dip"
    android:background="@color/bg_normal" >

    <ImageView
        android:id="@+id/weibo_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="9.33dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11.33dp"
        android:src="@drawable/site_t_tencent" />

    <TextView
        android:id="@+android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/weibo_imageView2"
        android:text="腾讯微博"
        android:textColor="@color/black"
        android:textSize="19sp" >

    </TextView>

    <LinearLayout
        android:id="@+android:id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip" />

</RelativeLayout>