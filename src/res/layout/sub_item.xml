<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dip"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/img_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_subscription_bigimg" />

    <TextView
        android:id="@+id/txt_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_alignBottom="@+id/img_sub"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/img_sub"
        android:text="时尚"
        android:background="@color/translucence_black"
        android:textColor="@color/white"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="24dip"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/img_sub"
        android:layout_below="@+id/img_sub"
        android:layout_marginTop="2dip"
        android:background="@drawable/btn_sub_no"
        android:text="我要订阅" />

</RelativeLayout>