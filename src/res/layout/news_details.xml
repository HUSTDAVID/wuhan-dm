<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dip"
    android:orientation="vertical"
    android:background="@color/bg_normal" >

    <TextView
        android:id="@+id/txt_news_title"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:text="@string/news_title" />
    
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:text="@string/news_time" />

        <TextView
            android:id="@+id/txt_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_source" />

    </LinearLayout>
    
     <View 
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@drawable/doubleline"/>

    <TextView
        android:id="@+id/txt_news_body"
        android:layout_width="fill_parent"
        android:padding="10dip"
        android:textColor="#404040"
        android:textSize="@dimen/news_normal"
        android:layout_height="wrap_content"
        android:text="" />
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@drawable/doubleline"/>

</LinearLayout>