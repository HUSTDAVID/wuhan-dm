<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:orientation="vertical" >
    
    
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:layout_marginBottom="24.67dp"
       android:layout_marginTop="5dip"
       android:background="@color/btn_normal"
       android:orientation="vertical" >

       

       <TextView
           android:id="@+id/vote_ing_2"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"           
           android:layout_marginTop="5dp"
           android:text="@string/vote_question"
           android:textColor="@color/black"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/vote_ing_3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="您的看法:"
           android:textSize="15sp"
           android:textColor="@color/vote_text1" />
       
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
           
      

       <RelativeLayout
           android:id="@+id/rel_title"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/vote_ing_4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="13.33dp"
               android:layout_toLeftOf="@+id/vote_ing_5"
               android:text="已有投票："
               android:textColor="@color/red"
               android:textSize="15sp" />

           <TextView
               android:id="@+id/vote_ing_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="13.33dp"
               android:text="@string/vote_number"
               android:textColor="@color/red"
               android:textSize="15sp" />
       </RelativeLayout>


       
       
     </RelativeLayout>
       
      
   </LinearLayout>
    

</LinearLayout>