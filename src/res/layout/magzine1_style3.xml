<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    android:weightSum="3" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/dm_mzine_header" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_magazine_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/mzine2_02" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout1_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dip"
            android:paddingTop="12dip" >

            <TextView
                android:id="@+id/txt_magazine_3_title1"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="新华社中国光谷新闻采访部成立" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source1"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time1"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="1个小时前" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="@drawable/double_line_ver" >
        </View>

        <LinearLayout
            android:id="@+id/layout2_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dip"
            android:paddingTop="12dip" >

            <TextView
                android:id="@+id/txt_magazine_3_title2"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="李智勇调研未来科技城" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source2"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北荆楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time2"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="3个小时前" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/double_line_hor" />

    <LinearLayout
        android:id="@+id/layout5_magazine_3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <TextView
            android:id="@+id/txt_magazine_3_title5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dip"
            android:text="市政府与中国医药集团签订合作协议"
            android:textColor="@color/mzine_txt_normal"
            android:textSize="@dimen/mzine_long_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_magazine_3_source5"
                style="@style/magazine_body"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:text="人民网" />

            <TextView
                android:id="@+id/txt_magazine_3_time5"
                style="@style/magazine_body"
                android:layout_height="match_parent"
                android:text="1个小时前" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/double_line_hor" />

    <LinearLayout
        android:id="@+id/medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layout3_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dip"
            android:paddingTop="12dip" >

            <TextView
                android:id="@+id/txt_magazine_3_title3"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="武汉久有股权投资基金成立" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source3"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北荆楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time3"
                    style="@style/magazine_body"
                    android:layout_height="fill_parent"
                    android:text="4个小时前" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="@drawable/double_line_ver" />

        <LinearLayout
            android:id="@+id/layout4_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dip"
            android:paddingTop="12dip" >

            <TextView
                android:id="@+id/txt_magazine_3_title4"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="东湖综合保税区通过预验收" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source4"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time4"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="10个小时前" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>