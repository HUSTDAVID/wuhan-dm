<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        layout="@layout/dm_mzine_header" >
    </include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_magazine_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/mzine3" />

        <TextView
            android:id="@+id/txt_mzine3_photos_title"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignBottom="@+id/img_magazine_1"
            android:layout_alignLeft="@+id/img_magazine_1"
            android:layout_alignRight="@+id/img_magazine_1"
            android:background="@color/translucence_black"
            android:gravity="right|center_vertical"
            android:paddingRight="10dip"
            android:text=""
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/double_line_hor" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout1_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_3_title1"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="新华社中国光谷新闻采访部成立" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source1"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time1"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="1个小时前" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="@drawable/double_line_ver" >
        </View>

        <LinearLayout
            android:id="@+id/layout2_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_3_title2"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="李智勇调研未来科技城" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source2"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北荆楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time2"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="3个小时前" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/double_line_hor" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layout5_magazine_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <TextView
                android:id="@+id/txt_magazine_3_title5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="市政府与中国医药集团签订合作协议"
                android:textColor="@color/mzine_txt_normal"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source5"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time5"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="1个小时前" />
            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/double_line_hor" />

    <LinearLayout
        android:id="@+id/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout3_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_3_title3"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="武汉久有股权投资基金成立" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source3"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北荆楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time3"
                    style="@style/magazine_body"
                    android:layout_height="fill_parent"
                    android:text="1个小时前" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="@drawable/double_line_ver" />

        <LinearLayout
            android:id="@+id/layout4_magazine_3"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_3_title4"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="东湖综合保税区通过预验收" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_3_source4"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北荆楚网" />

                <TextView
                    android:id="@+id/txt_magazine_3_time4"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="3个小时前" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>