<?xml version="1.0" encoding="utf-8"?>
 
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"	   
	    android:layout_height="wrap_content"
	    android:paddingTop="10dip"
	    android:paddingBottom="1dip"
	    android:background="@drawable/photos_bg" >

       <RelativeLayout
           android:layout_width="140dip"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="11dip"
           android:layout_weight="1"
           android:background="@drawable/photos_img_background"
           android:orientation="vertical" >
           
              <TextView 
            android:id="@+id/txt_left_photos_title"
            android:textColor="@color/black"
            android:layout_height="17dip"
            android:layout_alignLeft="@+id/img_left_potos_item"
            android:layout_width="wrap_content"
            android:text="@string/photos_title"
            android:textSize="12sp"/>
            
	    <ImageView
	        android:id="@+id/img_left_potos_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txt_left_photos_title"
	        android:layout_centerHorizontal="true"
	        android:scaleType="fitXY"
	        android:src="@drawable/temp_photos_img" />
	    
	     <RelativeLayout 
	         android:layout_width="fill_parent"
	         android:layout_height="21dip"
	         android:paddingTop="2dip"	         
	         android:layout_alignLeft="@+id/img_left_potos_item"
	         android:layout_alignRight="@+id/img_left_potos_item"
	         android:layout_below="@+id/img_left_potos_item">
	         
	        
	             <ImageView 
	                 android:id="@+id/img_left_photos_review"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_alignParentLeft="true"
	                 android:layout_marginRight="4dip"
	                 android:src="@drawable/icon_photos_review"/>
	             
	             <TextView 
	                 android:id="@+id/txt_left_review_total"
	                 android:layout_toRightOf="@+id/img_left_photos_review"
	                 android:layout_height="wrap_content"
	                 android:layout_width="wrap_content"
	                 android:layout_alignTop="@+id/img_left_photos_review"
	                 android:textSize="10sp"
	                 android:text="0"/>	                      
	        
	             
	             <ImageView 
	                 android:id="@+id/img_left_photos_num"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_alignTop="@+id/img_left_photos_review"
	                 android:layout_toLeftOf="@+id/txt_left_num_total"
	                 android:layout_marginRight="4dip"
	                 android:src="@drawable/icon_photos_num"/>
	             
	             <TextView 
	                 android:id="@+id/txt_left_num_total"
	                 android:layout_alignTop="@+id/img_left_photos_review"
	                 android:layout_height="wrap_content"
	                 android:layout_width="wrap_content"
	                 android:layout_alignParentRight="true"
	                 android:textSize="10sp"
	                 android:text="0"/>
	             

	         
	     </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dip"
            android:layout_weight="1"
            android:background="@drawable/photos_img_background"
            android:orientation="vertical" >
      
        <TextView 
            android:id="@+id/txt_right_photos_title"
            android:textColor="@color/black"
            android:layout_height="17dip"
            android:layout_alignLeft="@+id/img_right_potos_item"
            android:layout_width="wrap_content"
            android:text="@string/photos_title"
            android:textSize="12sp"/>
            

	    <ImageView
	        android:id="@+id/img_right_potos_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txt_right_photos_title"
	        android:layout_centerHorizontal="true"
	        android:scaleType="fitXY"
	        android:src="@drawable/temp_photos_img" />
	    
	     <RelativeLayout 
	         android:layout_width="fill_parent"
	         android:layout_height="21dip"
	         android:paddingTop="2dip"	         
	         android:layout_alignLeft="@+id/img_right_potos_item"
	         android:layout_alignRight="@+id/img_right_potos_item"
	         android:layout_below="@+id/img_right_potos_item">
	         
	        
	             <ImageView 
	                 android:id="@+id/img_right_photos_review"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_alignParentLeft="true"
	                 android:layout_marginRight="4dip"
	                 android:src="@drawable/icon_photos_review"/>
	             
	             <TextView 
	                 android:id="@+id/txt_right_review_total"
	                 android:layout_toRightOf="@+id/img_right_photos_review"
	                 android:layout_height="wrap_content"
	                 android:layout_width="wrap_content"
	                 android:layout_alignTop="@+id/img_right_photos_review"
	                 android:textSize="10sp"
	                 android:text="0"/>	                      
	        
	             
	             <ImageView 
	                 android:id="@+id/img_right_photos_num"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_alignTop="@+id/img_right_photos_review"
	                 android:layout_toLeftOf="@+id/txt_right_num_total"
	                 android:layout_marginRight="4dip"
	                 android:src="@drawable/icon_photos_num"/>
	             
	             <TextView 
	                 android:id="@+id/txt_right_num_total"
	                 android:layout_alignTop="@+id/img_right_photos_review"
	                 android:layout_height="wrap_content"
	                 android:layout_width="wrap_content"
	                 android:layout_alignParentRight="true"
	                 android:textSize="10sp"
	                 android:text="0"/>
	             

	         
	     </RelativeLayout>
        </RelativeLayout>
	  
	</RelativeLayout>
        