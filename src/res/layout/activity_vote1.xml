<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/vote_background">
    

    <include 
        android:id="@+id/vote_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/dm_vote_header"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dp"
            android:src="@drawable/icon_vote_title" />

        <TextView
            android:id="@+id/vote_ing_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imageView1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="投票问题"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:layout_marginBottom="24.67dp"
       android:layout_marginTop="19.33dp"
       android:background="@drawable/corners_bg"
       android:orientation="vertical" >

       <View
           android:layout_width="fill_parent"
           android:layout_height="1.5dip"
           android:layout_gravity="center_horizontal"
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:layout_marginTop="5dp"
           android:background="@drawable/double_line_hor" />

       <TextView
           android:id="@+id/vote_ing_2"
           android:layout_width="280dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="13.33dp"
           android:layout_marginTop="5dp"
           android:text="@string/vote_question"
           android:textColor="@color/black"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/vote_ing_3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="13.33dp"
           android:layout_marginTop="5dp"
           android:text="您的看法:"
           android:textSize="15sp"
           android:textColor="@color/vote_text1" />
       
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
           
      

       <RelativeLayout
           android:id="@+id/rel_title"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/vote_ing_4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="13.33dp"
               android:layout_toLeftOf="@+id/vote_ing_5"
               android:text="已有投票："
               android:textColor="@color/red"
               android:textSize="15sp" />

           <TextView
               android:id="@+id/vote_ing_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="13.33dp"
               android:text="@string/vote_number"
               android:textColor="@color/red"
               android:textSize="15sp" />
       </RelativeLayout>


       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dip"
           android:layout_below="@+id/rel_title"
           android:orientation="vertical" >

           <ListView 
               android:id="@+id/lv_vote_result"
               android:layout_width="fill_parent"
               android:layout_marginTop="10dip"
               android:layout_marginBottom="15dip"
               android:layout_marginLeft="15dip"
               android:layout_marginRight="15dip"
               android:background="@drawable/conners_white_bg"
               android:layout_above="@+id/vote_button_close"
               android:layout_height="wrap_content"/>
           

            <Button
                android:id="@+id/vote_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_vote_close"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="20sp" />
     
       </RelativeLayout>
       
     </RelativeLayout>
       
      
   </LinearLayout>
   
   

</LinearLayout>