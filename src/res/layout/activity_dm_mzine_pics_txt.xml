<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

	<include
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    layout="@layout/dm_mzine_header" 
	    android:layout_weight="0.3">
	</include>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@drawable/double_line_hor"
        android:layout_marginLeft="10dip" 
        android:layout_marginRight="10dip"/>

    <TableRow
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layout1_magazine_1"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_1_title1"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="@string/mag_title1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_magazine_1_source1"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />
                
                 <TextView
                    android:id="@+id/txt_magazine_1_time1"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="10个小时前" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="@drawable/double_line_ver" >
        </View>

        <LinearLayout
            android:id="@+id/layout2_magazine_1"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_1_title2"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="@string/mag_title2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" ><TextView
                    android:id="@+id/txt_magazine_1_source2"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />
                
                 <TextView
                    android:id="@+id/txt_magazine_1_time2"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="10个小时前" />

            </LinearLayout>

        </LinearLayout>
    </TableRow>

    <ImageView
        android:id="@+id/img_magazine_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/temp_magazine_img" />

    <TableRow
        android:id="@+id/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layout3_magazine_1"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_1_title3"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="@string/mag_title3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" ><TextView
                    android:id="@+id/txt_magazine_1_source3"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />
                
                 <TextView
                    android:id="@+id/txt_magazine_1_time3"
                    style="@style/magazine_body"
                    android:layout_height="wrap_content"
                    android:text="10个小时前" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="@drawable/double_line_ver" />

        <LinearLayout
            android:id="@+id/layout4_magazine_1"
            style="@style/magazine_news_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_1_title4"
                style="@style/magazine_title"
                android:layout_height="wrap_content"
                android:text="@string/mag_title4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" ><TextView
                    android:id="@+id/txt_magazine_1_source4"
                    style="@style/magazine_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:text="湖北大楚网" />
                
                 <TextView
                    android:id="@+id/txt_magazine_1_time4"
                    style="@style/magazine_body"
                    android:layout_height="match_parent"
                    android:text="10个小时前" />

            </LinearLayout>
        </LinearLayout>
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@drawable/double_line_hor" 
        android:layout_marginLeft="10dip" 
        android:layout_marginRight="10dip"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layout5_magazine_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_magazine_1_title5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/mag_title5"
                android:textColor="@color/mzine_txt_normal"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_magazine_1_body5"
                android:layout_width="fill_parent"
                android:textColor="#a1a1a1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/mag_body5"
                android:textSize="11sp" />
        </LinearLayout>
    </TableRow>

</LinearLayout>