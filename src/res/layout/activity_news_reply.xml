<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    android:orientation="vertical" >

    <include
        android:id="@+id/news_reply_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_title3" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/news_peply_bottom"
        android:layout_below="@+id/news_reply_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/news_reply_item" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dip"
            android:background="@drawable/double_line_hor" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/news_reply_item3" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dip"
            android:background="@drawable/double_line_hor" />

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/news_reply_item2" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dip"
            android:background="@drawable/double_line_hor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/news_peply_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_news_rel_btm_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@drawable/bottom_review_left" />

        <EditText
            android:id="@+id/edtx_news_reply"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="我来说两句" >

            <requestFocus />
        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bottom_review_right" />

        <Button
            android:id="@+id/btn_news_rel_favorite"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@drawable/btn_favorite"
            android:text="" />

        <Button
            android:id="@+id/btn_news_rel_share"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@drawable/btn_share"
            android:text="" />
    </LinearLayout>

</RelativeLayout>